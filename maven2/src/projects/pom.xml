<?xml version="1.0" encoding="UTF-8"?>

<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codehaus.cargo</groupId>
  <artifactId>cargo-samples-testAll</artifactId>
  <packaging>pom</packaging>
  <name>Cargo Samples for the Maven2 plugin</name>
  <version>0.3-SNAPSHOT</version>
  <description>Test the Maven 2 plugin</description>
  <modules>
    <module>testStartWithNoDeployableAndInBlockingMode</module>
    <module>testStartAndLocalDeploy</module>
    <module>testStartWithOneWarOneEarDeployed</module>
  </modules>
  
  <!-- Properties common to all profiles -->
  <properties>
    <port>8082</port>
    <installDir>${java.io.tmpdir}/cargo/installs</installDir>
  </properties>

  <!-- Container-specific profiles -->
  <profiles>
    <profile>
      <id>tomcat5x</id>
      <activation>
        <activeByDefault>true</activeByDefault>
       </activation>
      <properties>
        <containerId>tomcat5x</containerId>
        <downloadUrl>http://www.apache.org/dist/tomcat/tomcat-5/v5.0.30/bin/jakarta-tomcat-5.0.30.zip</downloadUrl>
      </properties>
    </profile>
    <profile>
      <id>orion2x</id>
      <properties>
        <containerId>orion2x</containerId>
        <downloadUrl>http://www.orionserver.com/distributions/orion2.0.7.zip</downloadUrl>
      </properties>
    </profile>
    <profile>
      <id>resin3x</id>
      <properties>
        <containerId>resin3x</containerId>
        <downloadUrl>http://www.caucho.com/download/resin-3.0.18.zip</downloadUrl>
      </properties>
    </profile>
    <profile>
      <id>jboss3x</id>
      <properties>
        <containerId>jboss3x</containerId>
        <downloadUrl>http://ovh.dl.sourceforge.net/sourceforge/jboss/jboss-3.2.8.zip</downloadUrl>
      </properties>
    </profile>
    <profile>
      <id>jboss4x</id>
      <properties>
        <containerId>jboss4x</containerId>
        <downloadUrl>http://ovh.dl.sourceforge.net/sourceforge/jboss/jboss-4.0.2.zip</downloadUrl>
      </properties>
    </profile>
  </profiles>
</project>
